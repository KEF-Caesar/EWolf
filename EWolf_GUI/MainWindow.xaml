<Window x:Class="EWolf_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EWolf_GUI"
        mc:Ignorable="d"
        Title="Deals" Height="350" Width="525">
    <Grid Margin="5,5,5,5">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="listBoxDeals">
            <ListBoxItem/>
        </ListBox>
        <Button x:Name="GetInfo" Grid.Row ="1" HorizontalAlignment="Right" Content="Get more information" Width="250" Height="25" />
    </Grid>
</Window>
